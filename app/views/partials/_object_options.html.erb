<% opt = "#{object.respond_to?(:name) ? object.name : model_name.humanize }" %>

<div class="form-actions">
    <%= link_to(eval("#{model_name.pluralize}_path"), class: 'waves-effect waves-light btn') do %>
      &nbsp;Display All
    <% end %>
    &nbsp;&nbsp;
  
  <% if controller.respond_to?(:update) && can?(:update, object) %>
    <%= link_to(eval("edit_#{model_name}_path(object)"), class: 'waves-effect waves-light btn') do %>
        &nbsp;<%= "Edit #{opt}" %>
    <% end %>
    &nbsp;&nbsp;
  <% end %>
  
  <% if controller.respond_to?(:destroy) && can?(:destroy, object) %>
    <%= link_to(eval("#{model_name}_path(object)"), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{opt}"}, class: 'waves-effect waves-light btn btn-alert') do %>
        &nbsp;<%= "Delete #{opt}" %>
    <% end %>
  <% end %>

  <% if controller.respond_to?(:close) && can?(:close, object) %>
    <%= link_to(eval("close_#{model_name}_path(object)"), method: 'patch', data: {confirm: "Are you sure you want to close this #{opt}"}, class: 'waves-effect waves-light btn btn-alert') do %>
        &nbsp;<%= "Close #{opt}" %>
    <% end %>
  <% end %>

  <% if controller.respond_to?(:terminate) && can?(:terminate, object) %>
    <%= link_to(eval("terminate_#{model_name}_path(object)"), method: 'patch', data: {confirm: "Are you sure you want to terminate this #{opt}"}, class: 'waves-effect waves-light btn btn-alert') do %>
        &nbsp;<%= "Terminate #{opt}" %>
    <% end %>
  <% end %>
</div>