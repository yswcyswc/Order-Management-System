<!DOCTYPE html>
<html>
  <head>
    <title>Roi du Pain :: <%= controller.controller_name.capitalize %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
  </head>

  <body>
    <!-- Topbar -->
    <%= render partial: "partials/topbar" %>

    <!-- Navigation -->
    <%= render partial: "partials/nav" %>

    <!-- Flash & Main Content -->
    <div class="container">
      <div class="row">
        <div class="col s12">
          <%= render partial: "partials/flash" %>
          <%= yield %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%= render partial: "partials/footer" %>
  </body>
</html>
